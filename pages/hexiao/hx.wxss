/* pages/hexiao/hx.wxss */

page {
  width: 100%;
  overflow-x: hidden;
  background: #dbdbdb;
}

.list_view {
  height: 214rpx;
  display: flex;
  margin: 16rpx;
  background: #fff;
  border-radius: 15rpx;
}

.item_right {
  display: flex;
  flex-direction: row;
}

.item_avatar {
  width: 150rpx;
  height: 150rpx;
  border-color: #ddd;
  border-style: solid;
  border-top-width: 1px;
  border-right-width: 1px;
  border-bottom-width: 1px;
  border-left-width: 1px;
}

.list_item {
  width: 100%;
  padding: 26rpx;
  display: flex;
  align-items: center;
  justify-items: flex-start;
  justify-content: flex-start;
  background: #fff;
  flex-direction: row;
}

.item_left {
  height: 150rpx;
  width: 150rpx;
  display: flex;
  margin-right: 20rpx;
  align-items: center;
}

.item_right {
  display: flex;
  width: 100%;
  margin-right: 20rpx;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 30rpx;
}

.je {
  display: flex;
  width: 100%;
  margin-right: 20rpx;
  flex-direction: row;
  justify-items: space-between;
  justify-content: space-between;
  align-items: stretch;
}

.hx_back {
  border-radius: 15rpx;
  background: #fff;
  margin: 16rpx;
  padding-bottom: 25rpx;
}

.hx {
  display: flex;
  font-size: 30rpx;
  padding-top: 60rpx;
  align-items: center;
  justify-items: flex-start;
  justify-content: flex-start;
  flex-direction: column;
}

.item_bottom {
  height: 45rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  margin-bottom: 24rpx;
}

.line1 {
  height: 1px;
  width: 40%;
  background: #e9e9e9;
}

.qcode_img {
  margin-top: 42rpx;
  margin-bottom: 56rpx;
  background: #f00;
  width: 300rpx;
  height: 300rpx;
}

.text_size {
  font-size: 30rpx;
  color: #333;
}

.hexiao_tag {
  position: relative;
  top: 100rpx;
  right: 25rpx;
  width: 145rpx;
  height: 104rpx;
}

.item_tit_name_size1 {
  width: 100rpx;
  height: 40rpx;
  border-color: #ddd;
  border-style: solid;
  border-top-width: 1px;
  border-right-width: 1px;
  border-bottom-width: 1px;
  border-left-width: 1px;
  border-radius: 30rpx;
  color: #999;
  text-align: center;
  padding: 10rpx;
  padding-bottom: 5rpx;
}

.text_size_24 {
  font-size: 24rpx;
  color: #878787;
}

.buttom_text_size_24 {
  font-size: 24rpx;
  color: #999;
  line-height: 30rpx;
  word-break: keep-all;
  word-wrap: break-word;
}

.text_size_22 {
  font-size: 22rpx;
  color: #999;
}

.text_size_24_red {
  font-size: 24rpx;
  color: #f60;
}

.pad_view {
  padding-left: 34rpx;
}
